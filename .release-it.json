{
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "requireCleanWorkingDir": false,
    "requireBranch": false,
    "requireUpstream": true,
    "requireCommits": false,
    "tagName": "v${version}"
  },
  "hooks": {
    "before:init": ["git fetch --tags"],
    "after:init": ["t2k","rm -rf dist"],
    "after:bump": ["unset GITLAB_TOKEN","goreleaser release"]
  },
  "github": {
    "release": false,
    "releaseName": "Release ${version}",
    "skipChecks": true,
    "releaseNotes": "git log --no-merges --pretty=format:\"* %s %h\" ${latestTag}...main"
  },
  "npm": {
    "publish": false,
    "skipChecks": true
  }
}
